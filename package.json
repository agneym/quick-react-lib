{
  "name": "@app/components",
  "version": "1.0.0",
  "description": "Reusable components for React",
  "main": "dist/components.js",
  "module": "dist/components.mjs",
  "unpkg": "dist/components.global.js",
  "typings": "dist/components.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "tsup": {
    "entry": [
      "lib/components.ts"
    ]
  },
  "scripts": {
    "dev": "tsup --watch",
    "example": "cd example && npm run dev",
    "postinstall": "npm run build",
    "build": "tsup --env.NODE_ENV production --minify --sourcemap --clean --format esm,cjs --dts",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Agney <agney@outlook.in>",
  "license": "ISC",
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "tsup": "^5.12.4",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
